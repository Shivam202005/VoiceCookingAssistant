# fetch_recipes.py
import requests
import json
import time
import re
from app import app, db
from models import Recipe
import os
from dotenv import load_dotenv

load_dotenv()

SPOONACULAR_API_KEY = os.getenv('SPOONACULAR_API_KEY')

def test_api_connection():
    """Test if API key works"""
    print("üîß Testing Spoonacular API connection...")
    
    if not SPOONACULAR_API_KEY or SPOONACULAR_API_KEY == 'your_actual_api_key_here':
        print("‚ùå ERROR: Please set your real API key in .env file!")
        return False
    
    print(f"‚úÖ API Key found: {SPOONACULAR_API_KEY[:10]}...")
    
    try:
        response = requests.get(
            "https://api.spoonacular.com/recipes/complexSearch",
            params={'apiKey': SPOONACULAR_API_KEY, 'query': 'test', 'number': 1}
        )
        
        if response.status_code == 200:
            print("‚úÖ API connection successful!")
            return True
        else:
            print(f"‚ùå API Error: {response.status_code} - {response.text}")
            return False
            
    except Exception as e:
        print(f"‚ùå Connection error: {e}")
        return False

def fetch_recipes():
    """Fetch recipes from Spoonacular"""
    if not test_api_connection():
        return []
    
    print("üîÑ Fetching recipes from Spoonacular...")
    
    recipes_data = []
    request_count = 0
    max_requests = 8  # Conservative limit
    
    # Search terms for variety
    search_terms = ['chicken', 'pasta', 'soup', 'salad', 'rice', 'fish', 'vegetarian', 'dessert']
    
    for term in search_terms:
        if request_count >= max_requests:
            break
            
        try:
            print(f"üìù Fetching {term} recipes...")
            
            response = requests.get(
                "https://api.spoonacular.com/recipes/complexSearch",
                params={
                    'apiKey': SPOONACULAR_API_KEY,
                    'query': term,
                    'number': 8,  # 8 recipes per search
                    'addRecipeInformation': True,
                    'fillIngredients': True,
                    'addRecipeInstructions': True
                }
            )
            
            request_count += 1
            
            if response.status_code == 200:
                data = response.json()
                
                for recipe in data.get('results', []):
                    processed = process_recipe(recipe)
                    if processed:
                        recipes_data.append(processed)
                        
                print(f"‚úÖ Got {len(data.get('results', []))} {term} recipes")
            else:
                print(f"‚ùå Error fetching {term}: {response.status_code}")
                
            time.sleep(1)  # Rate limiting
            
        except Exception as e:
            print(f"‚ùå Error with {term}: {e}")
    
    print(f"üì¶ Total recipes processed: {len(recipes_data)}")
    return recipes_data

def process_recipe(recipe):
    """Process Spoonacular recipe data"""
    try:
        # Extract ingredients
        ingredients = []
        for ingredient in recipe.get('extendedIngredients', []):
            ingredients.append({
                'name': ingredient.get('name', ''),
                'original': ingredient.get('original', ''),
                'amount': ingredient.get('amount', 0),
                'unit': ingredient.get('unit', '')
            })
        
        # Extract steps
        steps = []
        for instruction_group in recipe.get('analyzedInstructions', []):
            for step in instruction_group.get('steps', []):
                steps.append(step.get('step', ''))
        
        # Fallback steps if none found
        if not steps:
            steps = [
                "Prepare all ingredients as listed above",
                "Follow standard cooking method for this dish type",
                "Cook thoroughly and adjust seasoning to taste",
                "Serve hot and enjoy your meal!"
            ]
        
        # Clean HTML from description
        description = recipe.get('summary', '')
        if description:
            description = re.sub(r'<[^>]+>', '', description)[:250]
        
        return {
            'spoonacular_id': recipe.get('id'),
            'title': recipe.get('title', 'Untitled Recipe'),
            'description': description or recipe.get('title', ''),
            'image_url': recipe.get('image', '') or '/images/f1.jpeg',
            
            'ready_in_minutes': recipe.get('readyInMinutes', 30),
            'servings': recipe.get('servings', 4),
            'difficulty': 'Easy' if recipe.get('readyInMinutes', 30) <= 25 else 'Medium',
            
            'ingredients': ingredients,
            'steps': steps,
            
            # Future features data
            'cuisines': recipe.get('cuisines', []),
            'diets': recipe.get('diets', []),
            'nutrition': recipe.get('nutrition', {}),
            
            'category': 'FREE'
        }
        
    except Exception as e:
        print(f"‚ùå Error processing recipe: {e}")
        return None

def save_to_database(recipes_data):
    """Save recipes to database"""
    print(f"üíæ Saving {len(recipes_data)} recipes to database...")
    
    with app.app_context():
        saved = 0
        
        for recipe_data in recipes_data:
            try:
                existing = Recipe.query.filter_by(
                    spoonacular_id=recipe_data['spoonacular_id']
                ).first()
                
                if existing:
                    continue
                
                recipe = Recipe(**recipe_data)
                db.session.add(recipe)
                saved += 1
                
            except Exception as e:
                print(f"‚ùå Error saving recipe: {e}")
        
        try:
            db.session.commit()
            print(f"‚úÖ Successfully saved {saved} new recipes!")
        except Exception as e:
            print(f"‚ùå Database error: {e}")
            db.session.rollback()

def main():
    """Main execution"""
    print("üöÄ Spoonacular Recipe Fetcher")
    print("=" * 40)
    
    # Fetch recipes
    recipes = fetch_recipes()
    
    if recipes:
        save_to_database(recipes)
        print(f"\nÔøΩÔøΩ Database setup complete!")
        print(f"üìà Your app now has {len(recipes)} real recipes!")
    else:
        print("‚ùå No recipes were fetched")

if __name__ == '__main__':
    main()


